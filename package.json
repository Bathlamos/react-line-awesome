{
  "name": "react-line-awesome",
  "description": "React components for Line Awesome Icons",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "author": "Philippe Legault <philippe@legault.cc> (https://legault.cc)",
  "main": "dist/react-line-awesome.min.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@types/react": "16.8.19",
    "@types/react-dom": "16.8.4",
    "commander": "^2.20.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.5.1"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "dependencies": {},
  "scripts": {
    "start": "yarn generate:icons && yarn build",
    "build": "NODE_ENV=production ./scripts/build.sh",
    "generate:icons": "node scripts/generate-icons.js src/resources/line-awesome/css/line-awesome.css src/icons"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,md}": [
      "prettier --config .prettierrc --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn start && lint-staged"
    }
  }
}
